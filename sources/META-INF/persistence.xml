<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	
	
	<persistence-unit name="PAINAL_CHAMADAS" transaction-type="RESOURCE_LOCAL">
		
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		   <!--<class>br.com.evol.agenda.domain.Contato</class> -->
		<!-- <exclude-unlisted-classes>false</exclude-unlisted-classes> -->
		<properties>
		
			<property name="hibernate.connection.driver_class" value="org.postgresql.Driver" />  
            <property name="hibernate.connection.username" value="painel" />  
            <property name="hibernate.connection.password" value="painel" />  
            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/painel" />  
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />  
            <property name="hibernate.show_sql" value="true" />
            
			<property name="hibernate.connection.provider_class" value="org.hibernate.connection.C3P0ConnectionProvider" />
			<property name="hibernate.c3p0.min_size" value="50" />
			<property name="hibernate.c3p0.max_size" value="100" />
			<property name="hibernate.c3p0.timeout" value="5" />
			<property name="hibernate.c3p0.max_statements" value="50" />
			<property name="hibernate.c3p0.idle_test_period" value="0" />

		</properties>
	</persistence-unit>
</persistence>



			 


